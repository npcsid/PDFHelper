{
  "name": "pdf-helper-root",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "install:all": "npm install && npm install --prefix frontend && packages/backend/venv/bin/pip install -r packages/backend/requirements.txt",
    "dev:frontend": "npm run dev --prefix frontend",
    "dev:backend": "packages/backend/venv/bin/python packages/backend/main.py",
    "dev": "concurrently -n \"FE,BE\" \"npm run dev:frontend\" \"npm run dev:backend\""
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}